<!DOCTYPE html>
<html>
    <head>
        <title>Monitoring</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
  <link rel="stylesheet" href="css/table.css" />
</head>
<body>



<!-- Sidebar HTML -->
<div class="sidebar">
  <div class="profile">
    <span class="owner"><%= usInfo.name %> </span>
    <span class="roll"><%= usInfo.teamName %> </span>
  </div>
  <ul class="nav">
    <li class=active>
      <button class="abt">Home</button>
    </li>
    <li class=active>
      <form action="/project" method="get">
        <button type="submit" name="pid" value="<%= pIde %>" class="abt">Project Details</button>
      </form>
      
    </li>
    <li class="active">

      <form action="/requirement" method="get">
        <button type="submit" name="pid" value="<%= pIde %> " class="abt">Requirements</button>
      </form>
      
    </li>

    <li class="active">

      <form action="/monitor" method="get">
        <button type="submit" name="pid" value="<%= pIde %> " class="abt">Monitoring</button>
      </form>

    </li>

    <li class="active">

      <form action="/status" method="get">
        <button type="submit" name="pid" value="<%= pIde %> " class="abt">Project Status</button>
      </form>

    </li>

    <li class="btmn">

      <form action="/logout" method="post">
        <button type="submit" class="btt">Logout</button>
      </form>

    </li>

  </ul>
  <a href="#" class="settings">
    <i class="fa fa-cog"></i>
  </a>
</div>

<button class="toggle-button">
  <i class="fa fa-bars"></i>
  <i class="fa fa-arrows-alt"></i>
</button>

<!-- Usual html, responsive -->
<article>
  <div class="container">
   

    <form action="/addMont" method="post" class="reqform">
      <fieldset id="fieldset-sign-up">
        <legend>Project Monitoring</legend>


          <label>
            Requirement
            <select name="reqid">
              <option value="">Requirement:</option>
              <% reqInfo.forEach(function(item) { %>
              <option value="<%= item.funcreq %>"><%= item.funcreq %></option>
              <% }) %>
            </select>
          </label>

          <label>
            Analysis
            <input type="number"
                   name="anlhr"
                   placeholder="0"
                   required>
          </label>

        <label>
          Design
          <input type="number"
                 name="dsghr"
                 placeholder="0"
                 required>
        </label>

        <label>
            Coding
            <input type="number"
                   name="cdhr"
                   placeholder="0"
                   required>
          </label>

          <label>
            Testing
            <input type="number"
                   name="tsthr"
                   placeholder="0"
                   required>
          </label>

          <label>
            Management
            <input type="number"
                   name="mghr"
                   placeholder="0"
                   required>
          </label>
          
        
        <button type="submit" name="pid" value="<%= pIde %>" onchange="this.form.submit()" class="next">Add</button>
      </fieldset>
      
    </form>
  
    <div style="overflow-x: auto;">

      <table>

        <tr>
          <th>Requirement</th>
          <th>Analysis</th>
          <th>Design</th>
          <th>Coding</th>
          <th>Testing</th>
          <th>Management</th>
          <th>Action</th>
        </tr>

        <tr>
          <% reqInfos.forEach(function(items) { %>
          <td>
            <%= items.funcreq %> 
          </td>

          <td>
            <form action="/changeReqhr" method="post">
            <input type="number"
            name="anlhrs"
            placeholder="<%= items.reqanlsys %>"
            required>

            
              <input name="pid" value="<%= pIde %>" hidden>
              <button type="submit" name="reqhr" value="<%= items._id %>" class="btnch" onchange="this.form.submit()">Change</button>

            </form>

            

          </td>


          <td>
            <form action="/changeDesg" method="post">

              <input type="number"
              name="dsghrs"
              placeholder="<%= items.design %>"
              required>
  
              <input name="pid" value="<%= pIde %>" hidden>
              <button type="submit" name="dghr" value="<%= items._id %>" onchange="this.form.submit()" class="btnch">Change</button>
            </form>

          </td>

          <td>
            <form action="/changeCode" method="post">

              <input type="number"
              name="cdhrs"
              placeholder="<%= items.coding %> "
              required>
  
              <input name="pid" value="<%= pIde %>" hidden>
              <button type="submit" name="cdhr" value="<%= items._id %>" onchange="this.form.submit()" class="btnch">Change</button>
            </form>

          </td>

          <td>
            <form action="/changetest" method="post">

              <input type="number"
              name="tshrs"
              placeholder="<%= items.testing %> "
              required>
  
              <input name="pid" value="<%= pIde %>" hidden>
              <button type="submit" name="tshr" value="<%= items._id %>" onchange="this.form.submit()" class="btnch">Change</button>
            </form>

          </td>

          <td>
            <form action="/changepm" method="post">

              <input type="number"
              name="pmhrs"
              placeholder="<%= items.pm %> "
              required>
  
              <input name="pid" value="<%= pIde %>" hidden>
              <button type="submit" name="pmhr" value="<%= items._id %>" onchange="this.form.submit()" class="btnch">Change</button>
            </form>

          </td>

          <td>
              <form action="/delmonitor" method="post">
                <input name="pid" value="<%= pIde %>" hidden>
                <button type="submit" name="rmvmt" value="<%= items._id %>" class="btnRmv">Remove</button>
              </form>
              

            </td>
            <% }) %>
        </tr>
      </table>
    </div>
  </div>
  
</article>

  



   
  




  <script>
    $(".toggle-button").on("click", function(){
      $(".sidebar").toggleClass("active")
      if ($(".sidebar").hasClass("active"))
        {
          $("body").addClass("non-margin")
        } else {
          $("body").removeClass("non-margin")
        }
    })


    var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}

  </script>

    </body>
</html>


